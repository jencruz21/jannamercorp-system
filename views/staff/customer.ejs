 }
 
 
 
 document.forms["myform"]["amount"].value = (selectPricing*inputKilos);
 document.forms["myform"]["grandTotal"].value = (selectPricing*inputKilos);
 document.forms["myform"]["itemSubtotal"].value = (sacks);

 document.forms["myform"]["inputKilos"].value = (kilos);


 
     
 }  

 function kilosCal(){
    if(isNaN(document.forms["myform"]["kilosType"].value) || document.forms["myform"]["kilosType"].value=="") {   
 var kilosType = 0;   
 } else {   
 var kilosType = parseInt(document.forms["myform"]["kilosType"].value);   
 } 
 if(isNaN(document.forms["myform"]["sacks"].value) || document.forms["myform"]["sacks"].value=="") {   
 var sacks = 0;   
 } else {   
 var sacks = parseInt(document.forms["myform"]["sacks"].value);   
 } 

 document.forms["myform"]["kilos"].value = (kilosType*sacks);
 document.forms["myform"]["cavans"].value = (sacks);





 }

 function pricingCal(){
    if(isNaN(document.forms["myform"]["price"].value) || document.forms["myform"]["price"].value=="") {   
 var price = 0;   
 } else {   
 var price = parseInt(document.forms["myform"]["price"].value);   
 } 
 if(isNaN(document.forms["myform"]["kilos"].value) || document.forms["myform"]["kilos"].value=="") {   
 var kilos = 0;   
 } else {   
 var kilos = parseInt(document.forms["myform"]["kilos"].value);   
 } 
 

 document.forms["myform"]["amount"].value = (kilos*price);
 document.forms["myform"]["grandTotal"].value = (kilos*price);



 }
 function changeCal(){
    if(isNaN(document.forms["myform"]["amount"].value) || document.forms["myform"]["amount"].value=="") {   
 var amount = 0;   
 } else {   
 var amount = parseInt(document.forms["myform"]["amount"].value);   
 } 
 if(isNaN(document.forms["myform"]["cashRemited"].value) || document.forms["myform"]["cashRemited"].value=="") {   
 var cashRemited = 0;   
 } else {   
 var cashRemited = parseInt(document.forms["myform"]["cashRemited"].value);   
 } 


 document.forms["myform"]["change"].value = (cashRemited-amount);

 
 }



</script> 



