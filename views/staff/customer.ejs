 }   
 if(isNaN(document.forms["myform"]["sacks"].value) || document.forms["myform"]["sacks"].value=="") {   
 var sacks = 0;   
 } else {   
 var sacks = parseFloat(document.forms["myform"]["sacks"].value);   
 }
 if(isNaN(document.forms["myform"]["kilosType"].value) || document.forms["myform"]["kilosType"].value=="") {   
 var kilosType = 0;   
 } else {   
 var kilosType = parseFloat(document.forms["myform"]["kilosType"].value);   
 } 
 if(isNaN(document.forms["myform"]["inputKilos"].value) || document.forms["myform"]["inputKilos"].value=="") {   
 var inputKilos = 0;   
 } else {   
 var  inputKilos= parseFloat(document.forms["myform"]["inputKilos"].value);   
 }
 if(isNaN(document.forms["myform"]["amount"].value) || document.forms["myform"]["amount"].value=="") {   
 var amount = 0;   
 } else {   
 var amount = parseFloat(document.forms["myform"]["amount"].value);   
 }
 if(isNaN(document.forms["myform"]["kilos"].value) || document.forms["myform"]["kilos"].value=="") {   
 var kilos = 0;   
 } else {   
